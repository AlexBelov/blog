<div class="container">
  <div class="row">

    <% @posts.each do |post| %>
    <div class="col-lg-8">
      <h1>
        <%= post.title %>
      </h1>
      <div class="control">
        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Вы на 100% в этом уверены?' } %>
      </div>
      <p class="lead">by <a href="index.php">Start Bootstrap</a>
      </p>
      <hr>
      <p>
        <span class="glyphicon glyphicon-time"></span> Posted on August 24, 2013 at 9:00 PM
      </p>
      <hr>
      <p class="lead">
        <%= post.content.html_safe %>
      </p>

      <hr>
      comments
    </div>
    <% end %>

    <%= render 'sidebar' %>

  </div>
</div>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>