<div class="container">
  <div class="row">

    <% @posts.each do |post| %>
    <div class="col-lg-8">
      <h1>
        <%= link_to post.title, post %>
      </h1>
      <div class="control">
        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Вы на 100% в этом уверены?' } %>
      </div>
      <hr>
      <p>
        <span class="glyphicon glyphicon-time"></span>
        Опубликовано
        <%= Russian.strftime(post.created_at, '%d %B %Y')%>
      </p>
      <hr>
      <p class="lead">
        <%= post.content.html_safe %>
      </p>
      <hr>
      <div class="tags">
        <h5>Метки:</h5>
        <% post.tags.split(',').each do |tag| %>
          <p class="tag"><%= tag %></a>
        <% end %>
      </div>
    </div>

    <%= render 'sidebar' if post == @posts.first %>
    <% end %>

  </div>
</div>